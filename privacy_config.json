{
  "performance": {
    "max_size": 2048,
    "ocr_batch": 8,
    "yolo_conf": 0.25,
    "layoutlm_enabled": true
  },
  "trocr_model": "microsoft/trocr-base-handwritten",
  "yolo_model": "yolov8n.pt",
  "layoutlm_model": "microsoft/layoutlmv3-base-finetuned-funsd",
  "redaction": {
    "padding": 5,
    "watermark_text": "PII REDACTED",
    "watermark_font_size": 12,
    "watermark_color": [160, 160, 160],
    "min_box_size": [40, 20],
    "merge_overlap_threshold": 10
  },
  "models": {
    "use_fast": true,
    "use_half_precision": true,
    "cache_models": true
  },
  "detection": {
    "confidence_threshold": 0.25,
    "merge_adjacent_boxes": false,
    "expand_padding": 5,
    "kv_detection": true,
    "value_search_distance": 100,
    "fuzzy_match_threshold": 0.6
  }
}